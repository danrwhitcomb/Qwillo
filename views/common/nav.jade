//Nav bar template.
//Requires username



nav.navbar.navbar-default.nav(role='navigation')
	.container
		//Brand and toggle get grouped for better mobile display 
		.navbar-header
			button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href='#') App
		#bs-example-navbar-collapse-1.collapse.navbar-collapse
			ul.nav.navbar-nav.navbar-right
				li.nav-link
					a(href='#') Categories
				li.nav-link
					a(href='#') Submit
				li.nav-link.login-link
					a(href='#') #{username}
	if (username == 'Login' )
		.login
			.login-form-wrapper
				form.login-form(action="submit" autocomplete='on' method='post')
					input.login-box(placeholder="Username")
					input.login-box(placeholder="Password")
					button.login-button(type="submit" name="login") Login
					button.signup-button(type='button' name="signup") Sign Up
	else 
		.login
			.flyout-info-header
				img
				p #{username}
			ul.flyout-info-content
				li.flyout-info-item
					a(href='/user/#{username}') Profile
				li.flyout-info-item
					a(href='/account/settings/#{username}') Account Settings



script(type='text/javascript' src='/js/common/nav/login_module.js')