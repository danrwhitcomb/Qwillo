extends common/layout

block content
	link(rel="stylesheet" href="/css/homepage/index.css")
	.container.content
		.col-md-4
			.panel
				.panel-heading
					img(src="/images/placeholder.jpg")
					h1 #{featuredTopic.title}
				.panel-body.featured-panel 
					each post in featuredPosts
						.post-box
							.header
								h2
									a(href='/topic/#{featuredTopic.title}/#{post.title}')
							.featured-content
								| #{post.description}
					
		.col-md-8
			each topic in topics
